<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><i class="fas fa-clock"></i> Timeline</h5>
  </div>
  <div class="card-body">
    <div class="timeline">
      <!-- Always show submitted -->
      <div class="timeline-item mb-2">
        <span class="badge bg-success">Submitted</span>
        <span class="ms-2"><%= application.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
      </div>
      <% if application.status == "approved" %>
        <div class="timeline-item mb-2">
          <span class="badge bg-success">Approved</span>
          <span class="ms-2"><%= application.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
      <% elsif application.status == "rejected" %>
        <div class="timeline-item mb-2">
          <span class="badge bg-danger">Rejected</span>
          <span class="ms-2"><%= application.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
      <% elsif application.status == "more_info_needed" %>
        <div class="timeline-item mb-2">
          <span class="badge bg-secondary">More Info Needed</span>
          <span class="ms-2"><%= application.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
      <% elsif application.status == "under_review" %>
        <div class="timeline-item mb-2">
          <span class="badge bg-info">Under Review</span>
          <span class="ms-2"><%= application.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
