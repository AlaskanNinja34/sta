<%= render 'shared/admin_navbar' %>

<div class="container-fluid my-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h2 mb-1">Historical Applications</h1>
      <p class="text-muted">Import and manage paper application records</p>
    </div>
    <div>
      <%= link_to "Import Old Application Data", new_admin_historical_application_path, class: "btn btn-success" %>
    </div>
  </div>

  <!-- Filters -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <%= form_with url: admin_historical_applications_path, method: :get, local: true, class: "row g-3" do %>
        <div class="col-md-4">
          <input type="text" name="search" class="form-control" placeholder="Search by Tribal ID, Name, or School..." value="<%= params[:search] %>">
        </div>
        <div class="col-md-3">
          <select name="year" class="form-select">
            <option value="">All Years</option>
            <% @available_years.each do |year| %>
              <option value="<%= year %>" <%= 'selected' if params[:year].to_i == year %>><%= year %></option>
            <% end %>
          </select>
        </div>
        <div class="col-md-3">
          <select name="education_level" class="form-select">
            <option value="">All Levels</option>
            <option value="undergraduate" <%= 'selected' if params[:education_level] == 'undergraduate' %>>Undergraduate</option>
            <option value="graduate" <%= 'selected' if params[:education_level] == 'graduate' %>>Graduate</option>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Historical Applications Table -->
  <div class="card shadow">
    <div class="card-body">
      <% if @historical_applications.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Tribal ID</th>
                <th>Name</th>
                <th>Year</th>
                <th>School</th>
                <th>Level</th>
                <th>Amount (HE)</th>
                <th>Notes</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @historical_applications.each do |hist| %>
                <tr>
                  <td>
                    <% if hist.student %>
                      <%= link_to hist.tribal_id, admin_student_path(hist.student), class: "text-decoration-none" %>
                    <% else %>
                      <code><%= hist.tribal_id %></code>
                    <% end %>
                  </td>
                  <td><%= hist.display_student_name %></td>
                  <td><%= hist.application_year %></td>
                  <td><%= hist.school_name %></td>
                  <td><%= hist.education_level&.humanize %></td>
                  <td><strong>$<%= number_with_delimiter(hist.regular_amount || hist.amount_awarded || 0) %></strong></td>
                  <td class="text-truncate" style="max-width: 200px;" title="<%= hist.notes %>">
                    <%= truncate(hist.notes, length: 50) %>
                  </td>
                  <td>
                    <%= link_to "Edit", edit_admin_historical_application_path(hist), class: "btn btn-sm btn-outline-secondary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-archive fa-3x text-gray-300 mb-3"></i>
          <p class="text-muted">No historical applications found</p>
          <%= link_to "Import First Record", new_admin_historical_application_path, class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
