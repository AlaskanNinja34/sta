<h2 class="mt-4">Applicant Information</h2>
<div class="row g-3">
  <div class="col-md-4" data-controller="required-field">
    <%= f.label :last_name, "Last Name" %>
    <span class="text-danger" data-required-field-target="indicator">*</span>
    <%= f.text_field :last_name, class: "form-control", required: true, data: { action: "input->required-field#update change->required-field#update" } %>
  </div>
  <div class="col-md-4" data-controller="required-field">
    <%= f.label :first_name, "First Name" %>
    <span class="text-danger" data-required-field-target="indicator">*</span>
    <%= f.text_field :first_name, class: "form-control", required: true, data: { action: "input->required-field#update change->required-field#update" } %>
  </div>
  <div class="col-md-2">
    <%= f.label :middle_initial, "Middle Initial" %>
    <%= f.text_field :middle_initial, class: "form-control" %>
  </div>
  <div class="col-md-2">
    <%= f.label :previous_maiden_name, "Previous/Maiden Name" %>
    <%= f.text_field :previous_maiden_name, class: "form-control" %>
  </div>
</div>
<div class="row g-3 mt-3">
  <div class="col-md-6">
    <%= f.label :school_issued_student_id, "School Student ID" %>
    <%= f.text_field :school_issued_student_id, class: "form-control", placeholder: "College/University student ID" %>
  </div>
  <div class="col-md-3" data-controller="required-field">
    <%= f.label :date_of_birth, "Date of Birth" %>
    <span class="text-danger" data-required-field-target="indicator">*</span>
    <%= f.date_field :date_of_birth, class: "form-control", required: true, data: { action: "input->required-field#update change->required-field#update" } %>
  </div>
  <div class="col-md-3">
    <%= f.label :place_of_birth, "Place of Birth" %>
    <%= f.text_field :place_of_birth, class: "form-control" %>
  </div>
</div>
<div class="mt-3" data-controller="optional-field">
  <%= f.label :marital_status, "Marital Status" %>
  <span class="text-warning" data-optional-field-target="indicator">○</span><br>
  <% ["Married", "Divorced", "Single", "Widowed", "Separated"].each_with_index do |status, index| %>
    <div class="form-check form-check-inline">
      <%= f.radio_button :marital_status, status, id: "status_#{index}", data: { action: "change->optional-field#update" } %>
      <%= f.label "status_#{index}", status, class: "form-check-label" %>
    </div>
  <% end %>
</div>
<div class="row g-3 mt-3">
  <div class="col-md-4">
    <%= f.label :number_of_dependents, "Number of Dependents" %>
    <%= f.number_field :number_of_dependents, class: "form-control", min: 0 %>
  </div>
  <div class="col-md-4">
    <%= f.label :tribe_enrolled, "Tribe Currently Enrolled With" %>
    <%= f.text_field :tribe_enrolled, class: "form-control" %>
  </div>
  <div class="col-md-4">
    <%= f.label :previous_scholarship, "Previously Received Higher Education Scholarship from STA?" %><br>
    <div class="form-check form-check-inline">
      <%= f.radio_button :previous_scholarship, "Yes", id: "prev_yes" %>
      <%= f.label "prev_yes", "Yes", class: "form-check-label" %>
    </div>
    <div class="form-check form-check-inline">
      <%= f.radio_button :previous_scholarship, "No", id: "prev_no" %>
      <%= f.label "prev_no", "No", class: "form-check-label" %>
    </div>
  </div>
</div>
<div class="mt-3">
  <%= f.label :previous_scholarship_year, "If Yes, Year:" %>
  <%= f.text_field :previous_scholarship_year, class: "form-control" %>
</div>
<div class="mt-3" data-controller="optional-field">
  <%= f.label :preferred_contact, "Preferred Contact" %>
  <span class="text-warning" data-optional-field-target="indicator">○</span><br>
  <% ["E-Mail", "Phone", "Mail"].each_with_index do |contact, index| %>
    <div class="form-check form-check-inline">
      <%= f.radio_button :preferred_contact, contact, id: "contact_#{index}", data: { action: "change->optional-field#update" } %>
      <%= f.label "contact_#{index}", contact, class: "form-check-label" %>
    </div>
  <% end %>
</div>
<div class="mt-3" data-controller="required-field">
  <%= f.label :email_address, "E-mail Address(es)" %>
  <span class="text-danger" data-required-field-target="indicator">*</span>
  <%= f.email_field :email_address, class: "form-control", required: true, data: { action: "input->required-field#update change->required-field#update" } %>
</div>
<div class="mt-3" data-controller="optional-field">
  <%= f.label :mailing_address_permanent, "Mailing Address - Permanent Residence and Summer Address" %>
  <span class="text-warning" data-optional-field-target="indicator">○</span>
  <%= f.text_field :mailing_address_permanent, class: "form-control", data: { action: "input->optional-field#update change->optional-field#update" } %>
</div>
<div class="row g-3 mt-3">
  <div class="col-md-4">
    <%= f.label :city, "City" %>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class="col-md-4">
    <%= f.label :state, "State" %>
    <%= f.text_field :state, class: "form-control", list: "us-states-list" %>
  </div>
  <div class="col-md-4">
    <%= f.label :zip_code, "Zip Code" %>
    <%= f.text_field :zip_code, class: "form-control" %>
  </div>
</div>
<div class="mt-3">
  <%= f.label :mailing_address_school, "Mailing Address - While Attending School" %>
  <%= f.text_field :mailing_address_school, class: "form-control" %>
</div>
<div class="row g-3 mt-3">
  <div class="col-md-4">
    <%= f.label :city_school, "City" %>
    <%= f.text_field :city_school, class: "form-control" %>
  </div>
  <div class="col-md-4">
    <%= f.label :state_school, "State" %>
    <%= f.text_field :state_school, class: "form-control", list: "us-states-list" %>
  </div>
  <div class="col-md-4">
    <%= f.label :zip_code_school, "Zip Code" %>
    <%= f.text_field :zip_code_school, class: "form-control" %>
  </div>
</div>
<div class="row g-3 mt-3">
  <div class="col-md-6" data-controller="optional-field">
    <%= f.label :permanent_phone, "Permanent Phone Number / Summer Contact" %>
    <span class="text-warning" data-optional-field-target="indicator">○</span>
    <%= f.telephone_field :permanent_phone, class: "form-control", data: { action: "input->optional-field#update change->optional-field#update" } %>
  </div>
  <div class="col-md-6" data-controller="optional-field">
    <%= f.label :school_phone, "Phone Number While at School" %>
    <span class="text-warning" data-optional-field-target="indicator">○</span>
    <%= f.telephone_field :school_phone, class: "form-control", data: { action: "input->optional-field#update change->optional-field#update" } %>
  </div>
</div>
