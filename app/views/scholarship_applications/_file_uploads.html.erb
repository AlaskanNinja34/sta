<div class="mb-3">
  <label class="form-label"><strong>Upload Transcripts, FAFSA, and Any Other Required Files Here</strong></label>
  <p class="form-text">
    Please upload all required documents. You can select multiple files at once.
  </p>
  <%= f.file_field :uploaded_files, multiple: true, direct_upload: true, class: "form-control" %>

  <% if object.uploaded_files.attached? %>
    <div class="mt-3">
      <strong>Already Uploaded Files:</strong>
      <ul class="list-group">
        <% object.uploaded_files.each do |file| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to file.filename, rails_blob_path(file, disposition: "attachment"), target: "_blank" %>
            <span class="badge bg-secondary"><%= number_to_human_size(file.byte_size) %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
