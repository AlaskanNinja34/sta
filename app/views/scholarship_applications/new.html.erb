<div class="container my-5">
  <!-- Header and Instructions -->
  <h1 class="text-center mb-4">Sitka Tribe of Alaska Higher Education Scholarship Application</h1>
  <div class="alert alert-gray" style="background-color: #f8f9fa; border-color: #dee2e6; color: #495057;">
    <strong>Application Deadlines:</strong>
    <ul>
      <li><strong>April 1</strong> (First Time Applicants)</li>
      <li><strong>May 1</strong> (Renewing Applicants)</li>
      <li><strong>October 1</strong> (Partial Academic Year Applicants)</li>
    </ul>
    <p>
      SUBMIT COMPLETED APPLICATIONS: On website
      <br>
      Sitka Tribe of Alaska<br>
      204 Siginaka Way, Suite 300<br>
      Sitka, AK 99835<br>
      E-mail for any questions: <a href="mailto:scholarship.applicant@sitkatribe-nsn.gov"><strong>scholarship.applicant@sitkatribe-nsn.gov</strong></a><br>
    </p>
  </div>

  <%= form_with model: @application, url: scholarship_applications_path, local: true, html: { class: "needs-validation" } do |f| %>
    <!-- Section: Applicant Information -->
    <h2 class="mt-4">Applicant Information</h2>
    <div class="row g-3">
      <div class="col-md-4">
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name, class: "form-control", required: true %>
      </div>
      <div class="col-md-4">
        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name, class: "form-control", required: true %>
      </div>
      <div class="col-md-2">
        <%= f.label :middle_initial, "Middle Initial" %>
        <%= f.text_field :middle_initial, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= f.label :previous_maiden_name, "Previous/Maiden Name" %>
        <%= f.text_field :previous_maiden_name, class: "form-control" %>
      </div>
    </div>
    <div class="row g-3 mt-3">
      <div class="col-md-6">
        <%= f.label :student_id, "Student Identification Number" %>
        <%= f.text_field :student_id, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.label :date_of_birth, "Date of Birth" %>
        <%= f.date_field :date_of_birth, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.label :place_of_birth, "Place of Birth" %>
        <%= f.text_field :place_of_birth, class: "form-control" %>
      </div>
    </div>
    <div class="mt-3">
      <%= f.label :marital_status, "Marital Status" %><br>
      <% ["Married", "Divorced", "Single", "Widowed", "Separated"].each_with_index do |status, index| %>
        <div class="form-check form-check-inline">
          <%= f.radio_button :marital_status, status, id: "status_#{index}" %>
          <%= f.label "status_#{index}", status, class: "form-check-label" %>
        </div>
      <% end %>
    </div>
    <div class="row g-3 mt-3">
      <div class="col-md-4">
        <%= f.label :number_of_dependents, "Number of Dependents" %>
        <%= f.number_field :number_of_dependents, class: "form-control", min: 0 %>
      </div>
      <div class="col-md-4">
        <%= f.label :tribe_enrolled, "Tribe Currently Enrolled With" %>
        <%= f.text_field :tribe_enrolled, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :previous_scholarship, "Previously Received Scholarship from STA?" %><br>
        <div class="form-check form-check-inline">
          <%= f.radio_button :previous_scholarship, "Yes", id: "prev_yes" %>
